  "info": {
    "description": "Support for noncommutative algebra in MathHook with four symbol types:\nScalar (commutative), Matrix, Operator, and Quaternion (all noncommutative).\nEssential for quantum mechanics, linear algebra, and 3D rotations.\n",
    "title": "Noncommutative Algebra",
    "version": "1.0.0"
  },
  "openapi": "3.0.0",
  "paths": {
    "/advanced/noncommutative_algebra": {
      "post": {
        "description": "Support for noncommutative algebra in MathHook with four symbol types:\nScalar (commutative), Matrix, Operator, and Quaternion (all noncommutative).\nEssential for quantum mechanics, linear algebra, and 3D rotations.\n",
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "matrix_symbols": {
                  "description": "Create noncommutative matrix symbols",
                  "summary": "Matrix Symbols",
                  "value": {
                    "expression": "MatrixSymbol('A', n, n)"
                  }
                },
                "quantum_operators": {
                  "description": "Position and momentum operators (canonical commutation relation)",
                  "summary": "Quantum Operators",
                  "value": {
                    "expression": "Operator('x')"
                  }
                },
                "quaternions": {
                  "description": "3D rotation with quaternion multiplication",
                  "summary": "Quaternions",
                  "value": {
                    "expression": "Quaternion(0, 1, 0, 0)"
                  }
                }
              },
              "schema": {
                "$ref": "#/components/schemas/Request"
              }
            }
          },
          "required": true
        },
