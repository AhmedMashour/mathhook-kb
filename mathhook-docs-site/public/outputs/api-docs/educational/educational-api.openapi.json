  "info": {
    "description": "The Educational API provides programmatic access to MathHook's educational features for external applications. Integrate step-by-step explanations, assessment tools, and adaptive learning systems into Learning Management Systems (LMS), mobile apps, and educational platforms.\n",
    "title": "Educational API",
    "version": "1.0.0"
  },
  "openapi": "3.0.0",
  "paths": {
    "/educational/api": {
      "post": {
        "description": "The Educational API provides programmatic access to MathHook's educational features for external applications. Integrate step-by-step explanations, assessment tools, and adaptive learning systems into Learning Management Systems (LMS), mobile apps, and educational platforms.\n",
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "basic_dual-format_output": {
                  "description": "Generate both human and machine-readable educational content",
                  "summary": "Basic Dual-Format Output",
                  "value": {
                    "expression": "symbol('x')"
                  }
                },
                "educational_operation_trait_implementation": {
                  "description": "Add educational capabilities to mathematical operations",
                  "summary": "Educational Operation Trait Implementation",
                  "value": {
                    "expression": "equation"
                  }
                },
                "smartstepfactory_context-aware_generation": {
                  "description": "Generate educational steps based on operation context and difficulty",
                  "summary": "SmartStepFactory Context-Aware Generation",
                  "value": {
                    "expression": "EnhancedStepBuilder(\"step_1\") \\"
                  }
                }
              },
              "schema": {
                "$ref": "#/components/schemas/Request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "examples": {},
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            },
            "description": "Successful computation"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            },
            "description": "Invalid input"
          }
        },
        "summary": "Educational API",
        "tags": [
          "educational"
        ]
      }
    }
  },
  "servers": [
    {
      "description": "Production server",
      "url": "https://api.mathhook.org/v1"
    }
  ],
