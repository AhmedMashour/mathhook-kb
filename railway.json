{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd mathhook-docs-site && npm ci && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd mathhook-docs-site && node .output/server/index.mjs",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
