  "info": {
    "description": "Computes the derivative of an expression with respect to a variable using\nsymbolic differentiation rules. Supports power rule, product rule, quotient\nrule, chain rule, and derivatives of elementary functions.\n",
    "title": "Symbolic Differentiation",
    "version": "1.0.0"
  },
  "openapi": "3.0.0",
  "paths": {
    "/calculus/derivative": {
      "post": {
        "description": "Computes the derivative of an expression with respect to a variable using\nsymbolic differentiation rules. Supports power rule, product rule, quotient\nrule, chain rule, and derivatives of elementary functions.\n",
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "chain_rule": {
                  "description": "When differentiating a composition of functions f(g(x)), we use the\nchain rule: (f∘g)'(x) = f'(g(x)) · g'(x)\n",
                  "summary": "Chain Rule",
                  "value": {
                    "expression": "symbol('x')"
                  }
                },
                "power_rule": {
                  "description": "The derivative of x^n is n*x^(n-1). This is one of the fundamental\nrules of calculus and applies to any real exponent n.\n",
                  "summary": "Power Rule",
                  "value": {
                    "expression": "symbol('x')"
                  }
                },
                "product_rule": {
                  "description": "For the product of two functions u(x)·v(x), the derivative is\nu'(x)·v(x) + u(x)·v'(x)\n",
                  "summary": "Product Rule",
                  "value": {
                    "expression": "symbol('x')"
                  }
                }
              },
              "schema": {
                "$ref": "#/components/schemas/Request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "examples": {
                  "chain_rule": {
                    "summary": "Chain Rule",
                    "value": {
                      "latex": "$2*x*cos(x^2)$",
                      "result": "2*x*cos(x^2)"
                    }
                  },
                  "power_rule": {
                    "summary": "Power Rule",
                    "value": {
                      "latex": "$3*x^2$",
                      "result": "3*x^2"
                    }
                  },
                  "product_rule": {
                    "summary": "Product Rule",
                    "value": {
                      "latex": "$2*x*sin(x) + x^2*cos(x)$",
                      "result": "2*x*sin(x) + x^2*cos(x)"
                    }
                  }
                },
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            },
            "description": "Successful computation"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            },
            "description": "Invalid input"
          }
        },
        "summary": "Symbolic Differentiation",
        "tags": [
          "calculus"
        ]
      }
    }
